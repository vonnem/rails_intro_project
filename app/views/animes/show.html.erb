<h1 class= "title is-2 has-text-centered" ><%= @anime.title %></h1>
<div class="columns is-centered">
  <div class="column is-half">
    <div class="box">
      <div class="columns">
        <div class="column">
          <p>Score: </p>
          <p>Episodes: </p>
          <p>Popularity: </p>
          <p>Duration: </p>
          <p>Start Date: </p>
          <p>End Date: </p>
          <p>Members: </p>
          <p>Studio: </p>
        </div>
        <div class="column">
          <p><%= @anime.score %></p>
          <p><%= @anime.episodes %></p>
          <p><%= @anime.popularity %></p>
          <p><%= @anime.duration %></p>
          <p><%= @anime.start_date %></p>
          <p><%= @anime.end_date %></p>
          <p><%= @anime.members %></p>
          <p><%= link_to @anime.studio.studio_name, studio_path(@anime.studio_id) %></p>
        </div>
      </div>
    </div>
  </div>
</div>
